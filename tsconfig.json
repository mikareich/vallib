{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "resolveJsonModule": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*", "tests/**/*", "codgen/**/*"]
}
